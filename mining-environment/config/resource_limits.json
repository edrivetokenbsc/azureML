{
    "cpu_limit_percentage": 80,
    "ram_limit_gb": 4,
    "gpu_memory_limit_gb": 8,
    "disk_io_limit_mbps": 50,
    "network_bandwidth_limit_mbps": 100,
    "max_processes": 10,
    "max_threads_per_process": 4,
    
    "cache_limit_mb": 512,
  
